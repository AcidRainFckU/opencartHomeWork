
	<!--================Form Blog Area =================-->
	<section class="from_blog_area">
		<div class="container">
			<div class="from_blog_inner">
				<div class="c_main_title">
					<h2>{{ heading_title }}</h2>
				</div>
				<div class="row">
         {% for article in articles %}
					<div class="col-lg-4 col-sm-6">
          <a  href="{{ article.href }}">
          <div class="from_blog_item " >
							<img class="img-fluid" src="{{ article.thumb }}" alt="{{ article.name }}" title="{{ article.name }}">
							<div class="f_blog_text">
								<h5>fashion</h5>
								<p>{{ article.name }}</p>
								<h6>{{ article.date_added }}</h6>
							</div>
						</div>
          </a>
						
					</div>
			    {% endfor %}
				
				</div>
			</div>
		</div>
	</section>
	<!--================End Form Blog Area =================-->