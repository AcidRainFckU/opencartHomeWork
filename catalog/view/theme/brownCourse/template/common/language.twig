{% if languages|length > 1 %}

	<form class="selector" action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
		<select class="language_drop" name="countries" id="countries" style="width:300px;">
			{% for language in languages %}
				{% if language.code == code %}
					<option value='yt' data-image="catalog/language/{{ language.code }}/{{ language.code }}.png" data-imagecss="flag yt" data-title="{{ language.name }}">{{ language.name }}</option>
				{% endif %}
			{% endfor %}
			{% for language in languages %}
				{% if language.code != code %}
					<option value='yt' data-image="catalog/language/{{ language.code }}/{{ language.code }}.png" data-imagecss="flag yt" data-title="{{ language.name }}">{{ language.name }}</option>
				{% endif %}
			{% endfor %}
		</select>
		<input type="hidden" name="code" value=""/>
		<input type="hidden" name="redirect" value="{{ redirect }}"/>
	</form>


{% endif %}
